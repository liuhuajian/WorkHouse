<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:dither="true"
                    android:shape="oval">
                    <solid android:color="@color/white" />
                    <stroke
                        android:color="@color/theme_color"
                        android:width="1dp" />
                </shape>
            </item>

            <item
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" >
                <shape
                    android:shape="oval" >
                    <solid android:color="@color/theme_color" />
                    <size
                        android:width="10dp"
                        android:height="10dp" />

                </shape >
            </item >
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape android:dither="true"
                    android:shape="oval">
                    <solid android:color="@color/white" />
                    <stroke
                        android:color="@color/text_color_999999"
                        android:width="1dp" />
                </shape>
            </item>

            <item
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" >
                <shape
                    android:shape="oval" >
                    <solid android:color="@color/text_color_999999" />
                    <size
                        android:width="10dp"
                        android:height="10dp" />

                </shape >
            </item >
        </layer-list>
    </item>
</selector>