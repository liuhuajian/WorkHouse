<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PullRefreshLayoutStyle">
        <item name="qmui_target_init_offset">0dp</item>
        <item name="qmui_target_refresh_offset">72dp</item>
        <item name="qmui_auto_calculate_refresh_init_offset">true</item>
        <item name="qmui_auto_calculate_refresh_end_offset">true</item>
    </style>

    <!-- 标题栏样式  #### start #### -->
    <style name="title_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="dialog_common_anim">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="MyDialogStyle" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--设置无标题-->
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="progressDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--设置无标题-->
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Toast</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="ThemeEditText">
        <item name="android:layout_marginLeft">@dimen/size_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/size_margin_left_right</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:background">@drawable/select_et_line_grey_theme</item>
    </style>
    <!--圆角view-->
    <style name="RadiusImageViewStyle">
        <item name="qmui_is_circle">true</item>
        <item name="qmui_border_width">1px</item>
        <item name="qmui_border_color">@color/white</item>
        <item name="qmui_is_touch_select_mode_enabled">true</item>
    </style>

    <!-- tanktextview 自定义属性 旋转-->
    <declare-styleable name="CustomerTextView">
        <attr name="degree" format="integer"/>
        <attr name="transX" format="float"/>
        <attr name="transY" format="float"/>
        <attr name="banTouch" format="boolean"/>
    </declare-styleable>
</resources>
