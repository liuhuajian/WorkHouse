<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_tv_height_44dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="请选择性别"
        android:textColor="@color/text_color_333333"
        android:textSize="@dimen/text_big_size" />

    <include layout="@layout/view_line_layout" />


    <LinearLayout
        android:id="@+id/ll_male"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_tv_height_44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_male"
            android:duplicateParentState="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_margin_left_right"
            android:layout_weight="1"
            android:text="男"
            android:textSize="@dimen/text_default_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_margin_left_right"
            android:duplicateParentState="true"
            android:src="@drawable/selector_sex" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_famale"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_tv_height_44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_famale"
            android:duplicateParentState="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_margin_left_right"
            android:layout_weight="1"
            android:text="女"
            android:textSize="@dimen/text_default_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_margin_left_right"
            android:duplicateParentState="true"
            android:src="@drawable/selector_sex" />
    </LinearLayout>


</LinearLayout>